<div class="edit">
  <h1>Editing Book</h1>
  <div>
    <% if @book.errors.any? %>
      <div class="error-count">
        <p class="error-count-message">
        <%= @book.errors.count %>errors prohibited this book from being saved:
        </p>
      </div>
      <div class="error-message">
        <span class="error-message-message">
          <% @book.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </span>
      </div>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <div class="red1">
        <h4>Title</h4>
      </div>
      <div class="red2">
        <%= f.text_field :title %>
      </div>
      <div class="red1">  
        <h4>Body</h4>
      </div>
      <div class="red3">
        <p>
          <%= f.text_area :body %>
        </p>
      </div>
      <div class="red4">
        <%= f.submit 'Update Book' %>
      </div>
      <% end %>
    <% else %>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      
        <h4>Title</h4>
        <%= f.text_field :title %>
        
        <h4>Body</h4>
        <%= f.text_area :body %>
        
        <%= f.submit 'Update Book' %>
      <% end %>
    <% end %>
  </div>
</div>