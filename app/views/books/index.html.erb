<body>
  <div class="box1">
    <div class=green>
      <%= flash[:notice] %>
    </div>
    <h1 class="books">Books</h1>

    <div class="body-box1">
      <div class="title">
        <h3 class="a">title</h3>
      </div>
      <div class="body">
        <h3 class="a">body</h3>
      </div>
    </div>

    <% @books.each do |book| %>
      <div class="body-box2">
        <div class="book-title">
          <div class="title-row">
            <span class="a">
              <%= link_to book.title, book_path(book.id) %>
            </span>
          </div>
        </div>
        <div class="book-body">
          <div class="body-row">
            <span class="a">
              <%= link_to book.body, book_path(book.id) %>
            </span>
          </div>
        </div>
        <div class="book-clug">
          <div class="clug-row">
            <span class="a">
              <%= link_to "show", book_path(book.id) %>
            </span>
          </div>
        </div>
        <div class="book-clug">
          <div class="clug-row">
            <span class="a">
              <%= link_to "Edit", edit_book_path(book.id) %>
            </span>
          </div>
        </div>
        <div class="book-clug">
          <div class="clug-row">
            <span class="a">
             <%= link_to "delete", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are your sure?" %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class=box2>
    <div>
      <% if @book.errors.any? %>
          <div class="error-count1">
            <p class="error-count-message">
              <%= @book.errors.count %>errors prohibited this book from being saved:
            </p>
          </div>
          <div class="error-message1">
            <span class="error-message-message">
              <% @book.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </span>
          </div>

        <div class="newbook">
          <h2 class="newbook-title">New book</h2>
          <%= form_with model: @book do |f| %>
          <div class="red1">
            <h4>title</h4>
          </div>
          <div class="red2">
            <%= f.text_field :title %>
          </div>
          <div class="red1">
            <h4>body</h4>
          </div>
          <div class="red3">
            <%= f.text_area :body %>
          </div>
          <div class="red4">
            <%= f.submit 'create book' %>
          </div>
          <% end %>
        </div>
        
      <% else %>  
        <div class="newbook">
          <h2 class="newbook-title">New book</h2>
          <%= form_with model: @book do |f| %>
          <!--<div class="red1">-->
            <h4>title</h4>
          <!--</div>-->
          <!--<div class="red2">-->
            <%= f.text_field :title %>
          <!--</div>-->
          <!--<div class="red1">-->
            <h4>body</h4>
          <!--</div>-->
          <!--<div class="red3">-->
            <%= f.text_area :body %>
          <!--</div>-->
          <!--<div class="red4">-->
            <%= f.submit 'create book' %>
          <!--</div>-->
          <% end %>
        </div>
      <% end %>
    </div>  
  </div>
    
</body>
